import java.util.Scanner;

public class Commands
{
  public static void clearScreen(int l)
  {
    for (int i = 0; i < 23 - l; i++)
    {
      System.out.println(" ");
    }
  }
  public static void basicCommands(String command)
  {
    if (command.equals("help"))
    {
      System.out.println("Type LOOK to examine your surroundings.");
      System.out.println("Type LOOK -item- to examine a specific item.");
      System.out.println("Type USE -item- to use any item that you are able to use.");
      System.out.println("Type GET -item- to attempt to get the item.");
      System.out.println("Type TALK -person- to attempt conversation.");
      System.out.println("Type GO -direction- to relocate yourself.");
      System.out.println("Type EXIT to quit the game.");
      clearScreen(7);
    }
    else if (command.equals("look self"))
    {
      System.out.println("You are a stout man of about 35. You are currently suffering from chronic undiagnosed");
      System.out.println("amnesia.");
      clearScreen(2);
    }
    else if (command.equals("die"))
    {
      System.out.print("Maybe later.");
      clearScreen(1);
    }
    else if (command.equals("exit"))
    {
      System.exit(1);
    }
  }
  public int Room1(String command)
  {
    if (command.equals("look"))
    {
      System.out.println("There is NOTHING in this room. There is an open DOOR on the west wall.");
      clearScreen(1);
      return 1;
    }
    else if (command.equals("look door"))
    {
      System.out.println("A standard door. It is wide open.");
      clearScreen(1);
      return 1;
    }
    else if (command.equals("go west"))
    {
      return 2;
    }
    else if (command.equals("go east") || command.equals("go north") || command.equals("go south"))
    {
      System.out.println("You cannot go in that direction!");
      clearScreen(1);
      return 1;
    }
    else
    {
      return 0;
    }
  }
  public int Room2(String command)
  {
    if (command.equals("look"))
    {
      System.out.println("There is a green chest against the north wall in the corner,");
      System.out.println("a closed red door on the west wall, and open doors on the south and east walls.");
      clearScreen(2);
      return 1;
    }
    else if (command.equals("look chest"))
    {
      System.out.println("This chest is green. It has a green lock.");
      clearScreen(1);
      return 1;
    }
    else if (command.equals("look red door"))
    {
      System.out.println("This door is red. It has a red lock.");
      clearScreen(1);
      return 1;
    }
    else if (command.equals("open chest") || command.equals("use greenkey") || command.equals("use green key"))
    {
      return 2;
    }
    else if (command.equals("open door") || command.equals("use redkey") || command.equals("use red key"))
    {
      return 3;
    }
    else if (command.equals("go west"))
    {
      return 4;
    }
    else if (command.equals("go east"))
    {
      return 5;
    }
    else if (command.equals("go south"))
    {
      return 6;
    }
    else if (command.equals("go north"))
    {
      System.out.println("You cannot go in that direction!");
      clearScreen(1);
      return 1;
    }
    else
    {
      return 0;
    }
  }
}
