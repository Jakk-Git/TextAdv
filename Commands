import java.util.Scanner;

public class Commands
{
  public static void clearScreen(int l)
  {
    for (int i = 0; i < 23 - l; i++)
    {
      System.out.println(" ");
    }
  }
  public static void basicCommands(String command)
  {
    Scanner first = command;
    if (command.equals("help"))
    {
      System.out.println("Type LOOK to examine your surroundings.");
      System.out.println("Type LOOK -item- to examine a specific item.");
      System.out.println("Type USE -item- to use an item that you have aquired.");
      System.out.println("Type GET -item- to attempt to get the item.");
      System.out.println("Type TALK -person- to attempt conversation.");
      System.out.println("Type GO -direction- to relocate yourself.");
      clearScreen(6);
    }
    else if (command.equals("look self"))
    {
      System.out.println("You are a stout man of about 35. You are currently suffering from chronic undiagnosed");
      System.out.println("amnesia.");
      clearScreen(2);
    }
    else if (first.next().equals("kill"))
    {
      System.out.println("You don't feel like killing today.");
      clearScreen(1);
    }
    else if (command.equals("die"))
    {
      System.out.print("Maybe later.");
    }
    
  }
  public static void main(String args[])
  {
    Scanner kb = new Scanner(System.in);
    String command = kb.nextLine();
    basicCommands(command);
  }
}
